{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "users",
        "Match": {
          "Path": "/users/{**catch-all}"
        }
      },
      "products": {
        "ClusterId": "products",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      },
      "monolith": {
        "ClusterId": "monolith",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
          "users":    { "Destinations": { "d1": { "Address": "http://localhost:5091" } } },
          "products":    { "Destinations": { "d1": { "Address": "http://localhost:5092" } } },
          "monolith": { "Destinations": { "d1": { "Address": "http://localhost:5070" } } }
    }
  }
}